    <style name="Theme.TelaInformacoesPokemon" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/DarkRed</item>
        <item name="android:colorBackground">@color/DarkRed</item>
        <item name="android:windowBackground">@color/DarkRed</item>
        <item name="colorAccent">@color/White</item>
        <item name="android:statusBarColor">@color/DarkRed</item>
