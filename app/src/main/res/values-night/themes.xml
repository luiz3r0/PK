<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PK" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/DarkRed</item>
        <item name="android:colorBackground">@color/DarkRed</item>
        <item name="android:windowBackground">@color/DarkRed</item>
        <item name="colorAccent">@color/White</item>
        <item name="android:statusBarColor">@color/DarkRed</item>
        <item name="android:fontFamily">@font/sansserif</item>
        <item name="android:navigationBarColor">@color/DarkRed</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.TelaAbertura" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/DarkRed</item>
        <item name="android:colorBackground">@color/DarkRed</item>
        <item name="android:windowBackground">@drawable/drawable_tela_abertura</item>
        <item name="colorAccent">@color/White</item>
        <item name="android:statusBarColor">@color/DarkRed</item>
        <item name="android:fontFamily">@font/sansserif</item>
        <item name="android:navigationBarColor">@color/DarkRed</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.TelaPokemon" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/DarkRed</item>
        <item name="android:colorBackground">@color/DarkRed</item>
        <item name="android:windowBackground">@color/DarkRed</item>
        <item name="colorAccent">@color/White</item>
        <item name="android:statusBarColor">@color/DarkRed</item>
        <item name="android:fontFamily">@font/sansserif</item>
