<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_tela_pokemon"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    android:layout_margin="8dp"
    card_view:cardBackgroundColor="@color/White"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    android:foreground="@drawable/buttonshape_ripple_cor_preto_transparente_20"
    tools:context="com.example.pk.view.activity.TelaPokemonActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/imageview_tela_pokemon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/textview_tela_pokemon_nome"
            android:contentDescription="@string/imagem" />

        <TextView
            android:id="@+id/textview_tela_pokemon_nome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="@string/chamander"
            android:textColor="@color/Preto"
            android:textSize="14dp"
            android:textAllCaps="true"
            tools:ignore="SpUsage" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>